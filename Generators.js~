// Generators are functions that can be exited and re-entered. Their context remains even after exiting
// the function

// "function*" keyword is used to declare generators. They use "yield" instead of return

function* gen1() {
    let value = 0;

    while(true) {
	yield value++;
    }
}

console.log(gen1().next().value);
console.log(gen1().next().value);
console.log(gen1().next().value);

